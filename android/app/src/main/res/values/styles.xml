<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme-->

    <style name="Base.LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="LaunchTheme" parent="Base.LaunchTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/lightGray</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimaryDark">@color/darkGrey</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/presentPurple</item>
    </style>

    <style name="AppTheme.AppBarOverlay" />

    <style name="AppTheme.NoBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DarkAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="PrimaryPurple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/presentPurple</item>
        <item name="colorControlNormal">@color/lightGray</item>
        <item name="colorControlActivated">@color/presentPurple</item>
        <item name="colorAccent">@color/presentPurple</item>
    </style>

    <style name="ImageGalleryTheme" parent="DarkAppTheme">
        <item name="android:actionBarStyle">@style/ImageGalleryActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="ImageGalleryActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="SocialButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:tint">@color/white</item>
        <item name="android:layout_width">@dimen/social_button_diameter</item>
        <item name="android:layout_height">@dimen/social_button_diameter</item>
        <item name="android:background">@drawable/button_social_background</item>
    </style>

    <style name="H1" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h1_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:breakStrategy" tools:ignore="NewApi">simple</item>
    </style>

    <style name="H2" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/off_black</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:breakStrategy" tools:ignore="NewApi">simple</item>
    </style>

    <style name="H2.NonBold" >
        <item name="android:textColor">@color/veryDarkGray</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColorHint">@color/midGray</item>
        <item name="android:background">@null</item>
    </style>



    <style name="Digit" parent="Number">
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="Number" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/veryDarkGray</item>
        <item name="android:textSize">@dimen/number_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:breakStrategy" tools:ignore="NewApi">simple</item>
    </style>

    <style name="EditText.Number" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/veryDarkGray</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">@dimen/number_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:breakStrategy" tools:ignore="NewApi">simple</item>
    </style>

    <style name="SmallCaps">
        <item name="android:textColor">@color/midGray</item>
        <item name="android:textSize">@dimen/small_caps_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Chip">
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/chip_padding</item>
        <item name="android:paddingEnd">@dimen/chip_padding</item>
        <item name="android:background">@drawable/chip_purple_selector</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Body" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/veryDarkGray</item>
    </style>

    <style name="Error" parent="@style/Body">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="ProfileMediumBody" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/location_title_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ProfileButtonCaption" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CircleButtonCaption" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/veryDarkGray</item>
    </style>

    <style name="ChatDescriptionDetailText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/circle_owner_text_size</item>
    </style>

    <style name="LocationDetailText" parent="ChatDescriptionDetailText">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EntryOld" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/charcoalGrey</item>
        <item name="android:textSize">@dimen/entry_text_size</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>

    <style name="CircleItemTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/veryDarkGray</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CircleItemSubtitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/midGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RoundedEndsButton" parent="RoundedEndsButton19"/>

    <style name="RoundedEndsButton19" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:layout_height">@dimen/share_button_diameter</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="JoinButton" parent="JoinButton19"/>

    <style name="JoinButton19" parent="RoundedEndsButton">
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/small_button_text_size</item>
        <item name="android:maxHeight">@dimen/button_rounded_end_height_sm</item>
        <item name="android:layout_height">@dimen/button_rounded_end_height_sm</item>
        <item name="android:minHeight">@dimen/button_rounded_end_height_sm</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Inverse</item>
        <item name="android:textColor">@color/joined_button_text_color_selector</item>
    </style>

    <style name="RoundedEndsButton.Small" parent="RoundedEndsButton19.Small"/>

    <style name="RoundedEndsButton19.Small" parent="RoundedEndsButton">
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/small_button_text_size</item>
        <item name="android:maxHeight">@dimen/button_rounded_end_height_sm</item>
        <item name="android:layout_height">@dimen/button_rounded_end_height_sm</item>
        <item name="android:minHeight">@dimen/button_rounded_end_height_sm</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Inverse</item>
    </style>

    <style name="RoundedEndsButton.Purple" parent="RoundedEndsButton">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Inverse</item>
        <item name="android:background">@drawable/button_rounded_ends_purple</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
        <item name="android:maxHeight">@dimen/button_rounded_end_height_sm</item>
    </style>

    <style name="PurpleJoinButton" parent="JoinButton">
        <item name="android:background">@drawable/button_join_purple</item>
    </style>

    <style name="RoundedEndsButton.Small.Purple">
        <item name="android:background">@drawable/button_rounded_ends_purple_small</item>
    </style>

    <style name="RoundedEndsButton.WhiteBlackStroke" parent="RoundedEndsButton">
        <item name="android:background">@drawable/button_rounded_ends_white_black_stroke</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
    </style>

    <style name="UserProfileButton" parent="UserProfileButton19"/>

    <style name="UserProfileButton19" parent="Widget.AppCompat.ImageButton">
        <item name="android:minWidth">@dimen/profile_button_diameter</item>
        <item name="android:minHeight">@dimen/profile_button_diameter</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">@dimen/profile_button_diameter</item>
        <item name="android:layout_height">@dimen/profile_button_diameter</item>
        <item name="android:background">@drawable/button_profile_white_black_stroke</item>
    </style>

    <style name="ShareButton19" parent="Widget.AppCompat.ImageButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">@dimen/share_button_diameter</item>
        <item name="android:layout_height">@dimen/share_button_diameter</item>
    </style>

    <style name="ShareButton" parent="ShareButton19"/>

    <style name="PinkButton" parent="ShareButton">
        <item name="android:background">@drawable/button_round_pink</item>
    </style>

    <style name="BlueButton" parent="ShareButton">
        <item name="android:background">@drawable/button_round_blue</item>
    </style>

    <style name="PurpleButton" parent="ShareButton">
        <item name="android:background">@drawable/button_round_purple</item>
    </style>

    <style name="TurquoiseButton" parent="ShareButton">
        <item name="android:background">@drawable/button_round_turquoise</item>
    </style>

    <style name="YellowButton" parent="ShareButton">
        <item name="android:background">@drawable/button_round_yellow</item>
    </style>

    <style name="NonCapitalizedTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="HeaderTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">@dimen/spacing_small</item>
        <item name="tabPaddingEnd">@dimen/spacing_small</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/HeaderTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="HeaderTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/h2_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/blueGray</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NavigationTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/presentPurple</item>
    </style>

</resources>
