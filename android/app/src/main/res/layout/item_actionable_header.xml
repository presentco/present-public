<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_gray_background"
    android:minHeight="@dimen/header_height"
    android:paddingBottom="@dimen/spacing_small">

    <TextView
        android:id="@+id/headerText"
        style="@style/H2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="25dp"
        android:paddingEnd="@dimen/spacing_medium"
        android:paddingStart="@dimen/spacing_small"
        app:layout_constraintEnd_toStartOf="@+id/carat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Friends" />

    <ImageView
        android:id="@+id/carat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_small"
        android:tint="@color/off_black"
        app:layout_constraintBottom_toBottomOf="@id/headerText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/headerText"
        app:srcCompat="@drawable/right_carat" />

</androidx.constraintlayout.widget.ConstraintLayout>